{
  "include": ["src"],
  "files": ["webpack.config.ts"],
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2022",
    "moduleResolution": "node",
    "baseUrl": ".",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "lib": ["dom"],
    "types": ["node"],
    "noEmit": false,
    "outDir": "dist",
    "sourceMap": false,
    "paths": {}
  },
  "exclude": ["node_modules"]
}
