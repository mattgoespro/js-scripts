{
  "name": "js-scripts",
  "version": "0.0.1",
  "description": "Simple Javascript modules built from TypeScript.",
  "author": "hoppingmode",
  "scripts": {
    "start:file-server": "nodemon --config nodemon.json ./src/file-server/index.ts",
    "start:video-downloader": "nodemon --config nodemon.json ./src/video-downloader.ts",
    "start:webpack": "webpack --config webpack.config.ts --mode development --watch",
    "build:webpack": "webpack --config webpack.config.ts --mode production",
    "docker:file-server:build-image": "docker build -t hoppingmode/file-server:latest -f ./docker/file-server.dockerfile .",
    "docker:file-server:run-container": "docker run -d -h localhost -p 5000:3000 hoppingmode/file-server:latest",
    "prebuild": "rm -rf dist"
  },
  "dependencies": {
    "axios": "^1.6.8",
